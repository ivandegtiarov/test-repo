{%- style -%}
.maison-feature-grid-{{ section.id }} {
  /* Base styles */
  font-family: 'Satoshi', sans-serif;
}

.maison-feature-grid-{{ section.id }} h1 {
  margin: 0;
  font-size: 38px;
  font-weight: 700;
  line-height: 44px;
}

.maison-feature-grid-{{ section.id }} p {
  opacity: 0.56;
  margin: 0;
}

/* Section specific styles */
.maison-feature-section-{{ section.id }} {
  background-color: {{ section.settings.background_color }};
}

.maison-feature-padding-global-{{ section.id }} {
  padding: 0 2.5rem;
}

.maison-feature-container-{{ section.id }} {
  width: 100%;
  max-width: 80rem;
  margin: 0 auto;
}

.maison-feature-padding-section-{{ section.id }} {
  padding: 4rem 0;
}

.maison-feature-grid-{{ section.id }} {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 4rem;
  align-items: center;
}

/* Feature info styles */
.maison-feature-info-{{ section.id }} {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.maison-feature-subtitle-{{ section.id }} {
  color: {{ section.settings.accent_color }};
  font-weight: 700;
}

.maison-feature-title-{{ section.id }} {
  margin: 0.5rem 0 1rem;
}

/* Feature values grid */
.maison-feature-values-grid-{{ section.id }} {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem;
  padding-top: 1.5rem;
}

.maison-feature-value-item-{{ section.id }} {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.maison-feature-value-icon-{{ section.id }} {
  width: 3rem;
  height: 3rem;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: linear-gradient(#fff, #f5f5f5);
  border: 1px solid rgba(17, 17, 17, 0.08);
  border-radius: 0.75rem;
  box-shadow: 0 1px 2px rgba(16, 24, 40, 0.06), 0 1px 3px rgba(16, 24, 40, 0.1);
  margin: 0 0 0.5rem;
}

/* Media styles */
.maison-feature-media-{{ section.id }} {
  aspect-ratio: 1;
}

.maison-feature-image-{{ section.id }} {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Responsive styles */
@media screen and (max-width: 991px) {
  .maison-feature-grid-{{ section.id }} {
    flex-direction: column;
    gap: 3rem;
  }
  
  .maison-feature-padding-section-{{ section.id }} {
    padding: 3.25rem 0;
  }
}

@media screen and (max-width: 767px) {
  .maison-feature-padding-global-{{ section.id }} {
    padding: 0 1.25rem;
  }
  
  .maison-feature-value-item-{{ section.id }} {
    display: grid;
    grid-template-columns: auto 1fr;
    text-align: left;
    gap: 1rem;
  }
  
  .maison-feature-values-grid-{{ section.id }} {
    display: flex;
    flex-direction: column;
    padding-top: 1rem;
  }
}

@media screen and (max-width: 479px) {
  .maison-feature-padding-global-{{ section.id }} {
    padding: 0 1rem;
  }
  
  .maison-feature-padding-section-{{ section.id }} {
    padding: 2rem 0;
  }
}
{%- endstyle -%}

